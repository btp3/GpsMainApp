<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            >


            <!-- Round image -->

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/sagar"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"

                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:id="@+id/detail_profile"
            android:visibility="visible"
            >

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagar Sharma"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/profile_name"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gwalior,Madhya Pradesh"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:id="@+id/profile_address"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/profile_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7997676166"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/profile_aadhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar card : 1234 1234 1234"
                android:textSize="17sp"
                android:layout_gravity="center"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textSize="17sp"
                android:layout_gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/edit_profile_layout"
            android:visibility="gone"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/sign_up_text"
                android:id="@+id/edit_name"
                android:inputType="textEmailAddress"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:paddingTop="20dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="0.1dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:background="@drawable/edittext_background"
                android:id="@+id/edit_address"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_home_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contact"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/address"
                android:inputType="number"
                android:id="@+id/edit_contact"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_local_phone_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/adhar"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/contact"
                android:inputType="number"
                android:id="@+id/edit_aadhar"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_home_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SAVE CHANGES"
                android:id="@+id/save_edit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/rounded"
                android:layout_marginTop="40dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/add_phones_layout"
            android:layout_marginTop="20dp"
            >



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter first number"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/address"
                android:inputType="number"
                android:id="@+id/contact1"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_local_phone_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter second number"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/address"
                android:inputType="number"
                android:id="@+id/contact2"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_local_phone_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter third number"
                android:background="@drawable/edittext_background"
                android:layout_below="@+id/address"
                android:inputType="number"
                android:id="@+id/contact3"
                android:textSize="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_local_phone_grey_24dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SAVE NUMBERS"
                android:id="@+id/save_numbers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/rounded"
                android:layout_marginTop="40dp"
                android:padding="10dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ADD PHONE NUMBERS"
            android:id="@+id/add_phones"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            android:layout_marginTop="40dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/edit_profile_button"
            android:text="EDIT PROFILE"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            android:layout_marginTop="20dp"
            android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


