<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:weightSum="100">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff">


                <!-- Cover Image -->

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner1" />

                <!-- Round image -->

                <ImageView
                    android:id="@+id/banar1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pro"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <com.developer.iron_man.gpsmain.Others.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom Cruise"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <com.developer.iron_man.gpsmain.Others.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syracuse, New York"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

                <com.developer.iron_man.gpsmain.Others.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>

                <com.developer.iron_man.gpsmain.Others.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stars can't shine without darkness..."
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

                <com.developer.iron_man.gpsmain.Others.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Life can't shine without pain..."
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="EDIT PROFILE"
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:background="@drawable/rounded"
                android:layout_marginTop="30dp"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">
            </LinearLayout>

        </LinearLayout>


</RelativeLayout>


